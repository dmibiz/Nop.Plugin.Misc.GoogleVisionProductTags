@model Nop.Plugin.Misc.GoogleVisionProductTags.Models.ConfigurationModel

@inject Nop.Core.IWebHelper webHelper

@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="GoogleVisionProductTags" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="GoogleApiKey" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="GoogleApiKey" asp-required="true" asp-value="@Model.GoogleApiKey" />
                        <span asp-validation-for="GoogleApiKey"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="MaxTagsPerImage" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="MaxTagsPerImage" asp-required="true" asp-value="@Model.MaxTagsPerImage" />
                        <span asp-validation-for="MaxTagsPerImage"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="MinConfidenceScore" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="MinConfidenceScore" asp-required="true" asp-value="@Model.MinConfidenceScore" />
                        <span asp-validation-for="MinConfidenceScore"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="MinTopicality" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="MinTopicality" asp-required="true" asp-value="@Model.MinTopicality" />
                        <span asp-validation-for="MinTopicality"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="save" class="btn bg-primary" value="@T("Admin.Common.Save")" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
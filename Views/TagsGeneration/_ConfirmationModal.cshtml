<div id="googlevision-product-tags-confirmation-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="googlevision-product-tags-confirmation-modal-title">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <form asp-controller="GoogleVisionProductTags" asp-action="GenerateTagsForAllProducts" method="post">
                <div class="form-horizontal">
                    <div class="modal-body">
                        <ul class="common-list">
                            <li>
                                <em>@T("Plugins.Misc.GoogleVisionProductTags.GenerateAllProductTagsWarning")</em>
                            </li>
                        </ul>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary pull-right">
                            @T("Plugins.Misc.GoogleVisionProductTags.GenerateProductTags")
                        </button>
                        <span class="btn btn-default pull-right margin-r-5" data-dismiss="modal">@T("Plugins.Misc.GoogleVisionProductTags.Cancel")</span>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>